---
title: NPS
layout: "no-nav"
---

<div class="wrapper">
  <div class="content">
    <div class="d-flex flex-column flex-lg-row
    justify-content-around justify-content-lg-around
    align-items-stretch align-items-lg-center">
      <div class="card col-xs-12 col-md-8 my-5 mx-auto">
        <div class="card-body">
          <form action="https://www.getdrip.com/forms/858558873/submissions" method="post" data-drip-embedded-form="858558873">
            <h2 class="card-title" data-drip-attribute="headline">Thank you so much!</h2>
            <div data-drip-attribute="description">Your feedback helps us make sure The Skiff gets better and better.</div>
            <input id="drip-email" type="hidden" name="fields[email]" value="" />
            <div class="form-group">
                <label for="drip-npsfeedback">What is the most important reason for your score?</label><br />
                <textarea id="drip-npsfeedback" name="fields[npsfeedback]" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group">
              <input type="submit" name="submit" value="Submit Survey" data-drip-attribute="sign-up-button" class="btn btn-success btn-block"/>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<% content_for :javascript do %>
  <script>
    function getParameterByName(name) {
      name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
      var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
        results = regex.exec(location.search);
      return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

    // Get the email address the user has entered
    email = getParameterByName('drip-email');
    // Set the hidden email field
    $(function() {
      $('#drip-email').attr('value', email);
    });
  </script>
<% end %>